<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-3dp"
        >



        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btnexplore"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="back.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnexplore"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:padding="10dp"
            android:text="Past Pluse"
            android:textColor="@color/app_blue"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/createnewaccount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roundded_button"
                    android:drawablePadding="05dp"
                    android:hint="email or phone"

                    android:inputType="textEmailAddress"
                    android:paddingLeft="8dp"
                    android:paddingRight="36dp"
                    android:textColor="@color/tikdark"
                    android:textColorHint="@color/tiklightgray"

                    android:textCursorDrawable="@null"

                    android:textSize="16dp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right">


                <Button
                    android:id="@+id/forgotBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/password"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"

                    android:background="@android:color/transparent"
                    android:gravity="top|center"
                    android:text="Forgot Password?"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/app_blue"
                    android:textSize="14sp"
                    android:visibility="invisible" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/roundded_button"
                    android:drawablePadding="09dp"
                    android:hint="password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:paddingLeft="8dp"
                    android:paddingRight="36dp"
                    android:textColor="@color/tikdark"
                    android:textColorHint="@color/tiklightgray"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp" />


            </RelativeLayout>


            <Button
                android:id="@+id/loginbtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/signupshape"
                android:text="Login to my account"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="normal" />


        </LinearLayout>

        <!--<View-->
        <!--android:id="@+id/viewdivider"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.1dp"-->
        <!--android:layout_above="@+id/textView23"-->
        <!--android:background="@color/appbackcolor"></View>-->

        <TextView
            android:id="@+id/createnewaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Don't have an account? Sign up."
            android:textColor="@color/tikdark"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/LoginProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible" />


    </RelativeLayout>

</RelativeLayout>
